doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/normalize.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
        link(rel="stylesheet", href="/css/app.css")
        title #{nombrePagina}
    body 
        header.barra 
            h1 UpTask - Administrador de Proyectos 
            a(href="#") Cerrar Sesi√≥n 


        main.contenedor 
            aside.contenedor-proyectos
                .panel.crear-proyecto
                    a(href="/nuevo-proyecto" class="boton span") Nuevo proyecto + 
                       
                .panel.lista-proyectos  
                    h2 Proyectos
                    ul#proyectos.proyectos 
                        if(proyectos.length)
                            each proyecto in proyectos 
                                li 
                                    a(href=`/proyectos/${proyecto.url}`)=proyecto.nombre 

        
            block contenido

        script(src="/dist/bundle.js")